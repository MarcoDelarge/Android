<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_central"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnOk"
        android:layout_centerInParent="true"
        android:background="@color/miColor"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnOk"
        android:layout_centerHorizontal="true"
        android:background="@color/miColor"
        android:textColor="#fff"
        android:layout_below="@+id/btn_central"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnOk"
        android:layout_centerHorizontal="true"
        android:background="@color/miColor"
        android:textColor="#fff"
        android:layout_above="@+id/btn_central"
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnOk"
        android:layout_centerVertical="true"
        android:background="@color/miColor"
        android:textColor="#fff"
        android:layout_toEndOf="@+id/btn_central"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnOk"
        android:layout_centerVertical="true"
        android:background="@color/miColor"
        android:textColor="#fff"
        android:layout_toStartOf="@+id/btn_central"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnOk"
        android:layout_centerHorizontal="true"
        android:background="@color/miColor"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@id/btn6"
        >
        <EditText
            android:id="@+id/input2"
            android:layout_width="300dp"
            android:hint="Texto"
            android:layout_height="40dp"
            android:layout_above="@id/btn6"
            />
        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/input2"
            android:src="@drawable/ic_launcher_foreground"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/btn7"
        >
        <EditText
            android:id="@+id/input1"
            android:layout_width="300dp"
            android:hint="Texto"
            android:layout_height="40dp"
            android:layout_above="@id/btn6"
            />
        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/input2"
            android:src="@drawable/ic_launcher_background"
            />
    </LinearLayout>



    <Button
        android:id="@+id/btn7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnOk"
        android:layout_centerHorizontal="true"
        android:background="@color/miColor"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        />




</RelativeLayout>